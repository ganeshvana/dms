<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
    <record id="division_name_view" model="ir.ui.view">
            <field name="name">division.view</field>
            <field name="model">division</field>
            <field name="arch" type="xml">
                <form string="Division Name">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1" domain = "[('is_division', '=',True )] " widget="many2one_tags"/>
                                <field name="company_ids" required="1" widget="many2many_tags"/>
                            </group>
                             <group>
                                <field name="code" required="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="division_name_tree" model="ir.ui.view">
            <field name="name">division.tree</field>
            <field name="model">division</field>
            <field name="arch" type="xml">
                <tree string="Brand Name">
                    <field name="name"/>
                    <field name="code"/>  
                    <field name="company_ids" required="1" widget="many2many_tags"/>
                </tree>
            </field>
        </record>
        <record id="division_action" model="ir.actions.act_window">
            <field name="name">Division</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">division</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!--<menuitem name="Division" id="division_child" parent="sale.menu_sale_config" action="division_action" sequence="4"/>
         ******************************division Menu***********************
 -->
        <record id="division_menus_view" model="ir.ui.view">
            <field name="name">division_menus.view</field>
            <field name="model">division.menus</field>
            <field name="arch" type="xml">
                <form string="Division Menu">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" required="1" domain = "[('is_division', '=',1 )]" 
                                    context="{'search_default_supplier': 1,'res_partner_search_mode': 'supplier', 'default_is_company': True, 'default_supplier_rank': True}"/>
<!--                                 <field name="company_ids" required="1" widget="many2many_tags"/>
 -->                            </group>
                             <group>
                              <field name="code_no" required="1"  domain = "[('division_code', '=',1 )]" 

                                    context="{'search_default_supplier': 1,'res_partner_search_mode': 'supplier', 'default_is_company': True, 'default_supplier_rank': True}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
