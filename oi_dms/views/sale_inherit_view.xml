            <field name="arch" type="xml">
                <tree string="Division Menu">
                    <field name="name"/>
                    <field name="code_no"/>
              </tree>
            </field>
        </record> -->
        <record id="division_menus_action" model="ir.actions.act_window">
            <field name="name">Division</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">division.menus</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem name="Division" id="division_menus_child" parent="purchase.menu_purchase_config" action="division_menus_action" sequence="3"/>



